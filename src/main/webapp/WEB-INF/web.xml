<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <listener>
        <listener-class>com.webintegrator.CustomContextListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>webdav</servlet-name>
        <servlet-class>com.webintegrator.CustomWebdavServlet</servlet-class>
        <init-param>
            <param-name>load-on-startup</param-name>
            <param-value>1</param-value>
        </init-param>
        <init-param>
            <param-name>debug</param-name>
            <param-value>3</param-value>
        </init-param>
        <init-param>
            <param-name>listings</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>readonly</param-name>
            <param-value>false</param-value>
        </init-param>
        </servlet>
    <servlet>
        <servlet-name>AddReplicationAction</servlet-name>
        <servlet-class>com.webintegrator.actions.AddReplicationAction</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReplicationListAction</servlet-name>
        <servlet-class>com.webintegrator.ReplicationListAction</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>dwr-invoker</servlet-name>
        <servlet-class>org.directwebremoting.servlet.DwrServlet</servlet-class>
        <init-param>
            <param-name>debug</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param><param-name>activeReverseAjaxEnabled</param-name><param-value>true</param-value></init-param></servlet>
    <servlet>
        <servlet-name>FileSystemData</servlet-name>
        <servlet-class>com.webintegrator.data.FileSystemData</servlet-class>
    </servlet>
    <servlet><servlet-name>XMLFSBrowser</servlet-name><servlet-class>data.XMLFSBrowser</servlet-class></servlet><servlet-mapping>
        <servlet-name>webdav</servlet-name>
        <url-pattern>/webdav/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddReplicationAction</servlet-name>
        <url-pattern>/AddReplicationAction</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ReplicationListAction</servlet-name>
        <url-pattern>/ReplicationListAction</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>dwr-invoker</servlet-name>
        <url-pattern>/dwr/*</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FileSystemData</servlet-name>
        <url-pattern>/FileSystemData</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>XMLFSBrowser</servlet-name>
        <url-pattern>/XMLFSBrowser</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>ReplicationList.jsp</welcome-file>
        </welcome-file-list>
    <security-constraint>
        <display-name>Constraint1</display-name>
        <web-resource-collection>
            <web-resource-name>all</web-resource-name>
            <description/>
            <url-pattern>/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
            <http-method>HEAD</http-method>
            <http-method>PUT</http-method>
            <http-method>OPTIONS</http-method>
            <http-method>TRACE</http-method>
            <http-method>DELETE</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>admin</role-name>
            </auth-constraint>
        </security-constraint>
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>WebIntegrator</realm-name>
        </login-config>
    <security-role>
        <description/>
        <role-name>admin</role-name>
    </security-role>
    </web-app>
